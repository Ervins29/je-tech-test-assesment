@page "/not-found"
@layout MainLayout

<MudContainer MaxWidth="MaxWidth.False" Class="pa-0"
              Style="min-height: 100vh; background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%); display: flex; align-items: center; justify-content: center;">
    <MudContainer MaxWidth="MaxWidth.Medium" Class="text-center">
        <MudIcon Icon="@Icons.Material.Filled.SearchOff" Size="Size.Large"
                 Style="font-size: 120px; color: rgba(255, 255, 255, 0.3);" Class="mb-6"/>

        <MudText Typo="Typo.h1" Class="font-weight-bold mb-4" Style="color: white; font-size: 4rem;">404</MudText>

        <MudText Typo="Typo.h4" Class="font-weight-medium mb-4" Style="color: rgba(255, 255, 255, 0.9);">
            Movie Not Found
        </MudText>

        <MudText Typo="Typo.h6" Class="mb-8" Style="color: rgba(255, 255, 255, 0.7);">
            Sorry, we couldn't find the movie you're looking for. It might have been removed or doesn't exist.
        </MudText>

        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   Href="/"
                   Size="Size.Large"
                   StartIcon="@Icons.Material.Filled.Home"
                   Class="px-8">
            Back to Home
        </MudButton>
    </MudContainer>
</MudContainer>